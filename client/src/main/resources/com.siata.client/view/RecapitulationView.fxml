<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.siata.client.controller.RecapitulationController"
      spacing="24" styleClass="dashboard-content">
    <padding>
        <Insets top="32" right="32" bottom="32" left="32"/>
    </padding>

    <!-- Header -->
    <HBox spacing="16" alignment="CENTER_LEFT">
        <VBox spacing="4">
            <Label text="Rekapitulasi &amp; Matriks" styleClass="section-heading"/>
            <Label text="Ringkasan matriks distribusi aset dan pegawai" styleClass="section-description"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="exportButton" text="Export PDF" styleClass="primary-button"/>
    </HBox>

    <!-- Stats Grid -->
    <GridPane fx:id="statsGrid" hgap="20" vgap="20">
        <columnConstraints>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
        </columnConstraints>
    </GridPane>

    <!-- Tables -->
    <VBox fx:id="tablesContainer" spacing="24"/>
</VBox>
