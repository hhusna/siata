<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="modalContainer" spacing="20" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.siata.client.controller.ExportPdfModalController" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8;">
    <Label styleClass="modal-title" text="Export Laporan PDF" />

    <VBox spacing="16">
        <VBox spacing="8">
            <Label styleClass="form-label" text="Pilih Format Laporan" />
            <ComboBox fx:id="formatComboBox" prefWidth="200" />
        </VBox>

        <VBox spacing="8">
            <Label styleClass="form-label" text="Pilih Tabel yang Diexport" />
            <VBox fx:id="checkboxesContainer" spacing="8" />
        </VBox>

        <Separator />

        <VBox spacing="8">
            <Label styleClass="form-label" text="Opsi Export" />
            <CheckBox fx:id="includeChartsCheckbox" text="Sertakan grafik dan chart" />
            <CheckBox fx:id="includeSummaryCheckbox" text="Sertakan ringkasan statistik" />
            <CheckBox fx:id="landscapeOrientationCheckbox" text="Orientasi landscape" />
        </VBox>
    </VBox>

    <HBox spacing="12" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="Batal" styleClass="secondary-button" />
        <Button fx:id="exportButton" text="Export PDF" styleClass="primary-button" />
    </HBox>
</VBox>