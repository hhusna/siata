<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:controller="com.siata.client.controller.AssetManagementController"
      xmlns:fx="http://javafx.com/fxml" spacing="20" alignment="TOP_LEFT" styleClass="view-root" >

    <!-- Page Header -->
    <HBox spacing="16" alignment="CENTER_LEFT" fx:id="headerBox">
        <VBox spacing="4">
            <Label text="Manajemen Aset" styleClass="page-intro-title"/>
            <Label text="Kelola data aset pegawai" styleClass="page-intro-description"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="addButton" text="+ Tambah Aset" styleClass="primary-button"/>
    </HBox>

    <!-- Filter Bar -->
    <HBox spacing="12" alignment="CENTER_LEFT" fx:id="filterBar">
        <TextField fx:id="searchField" promptText="Q Cari" prefWidth="200"/>
        <ComboBox fx:id="jenisCombo" prefWidth="150"/>
        <ComboBox fx:id="statusCombo" prefWidth="150"/>
    </HBox>

    <!-- Table -->
    <VBox spacing="16" styleClass="table-container">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <TableView fx:id="assetTable" styleClass="data-table"/>
    </VBox>

</VBox>
