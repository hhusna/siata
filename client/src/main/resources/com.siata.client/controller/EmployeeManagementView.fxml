<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.siata.client.controller.EmployeeManagementController"
      spacing="20">

    <!-- Header -->
    <HBox spacing="16" alignment="CENTER_LEFT">
        <VBox spacing="4">
            <Label text="Manajemen Pegawai" styleClass="page-intro-title"/>
            <Label text="Kelola data pegawai dan aset yang dimiliki" styleClass="page-intro-description"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="addButton" text="+ Tambah Pegawai" styleClass="primary-button"/>
    </HBox>

    <!-- Filter bar -->
    <HBox fx:id="filterBar" spacing="12" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Cari berdasarkan nama atau NIP..." prefWidth="300"/>
        <ComboBox fx:id="unitCombo" prefWidth="150"/>
    </HBox>

    <!-- Table -->
    <VBox spacing="16" styleClass="table-container">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <TableView fx:id="employeeTable" styleClass="data-table" VBox.vgrow="ALWAYS"/>
    </VBox>
</VBox>
