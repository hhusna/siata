<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainContainer" spacing="24" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.siata.client.controller.DashboardContentController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Summary Grid Section -->
    <VBox spacing="16">
        <Label styleClass="section-subtitle" text="Ringkasan sistem distribusi aset pegawai" />
        <GridPane fx:id="statsGrid" hgap="20" vgap="20" styleClass="stats-grid">
            <columnConstraints>
                <ColumnConstraints percentWidth="50" />
                <ColumnConstraints percentWidth="50" />
            </columnConstraints>
        </GridPane>
    </VBox>

    <!-- Charts Section -->
    <VBox fx:id="chartsColumn" spacing="24">
        <!-- Histogram Card -->
        <VBox fx:id="histogramCard" styleClass="table-container,chart-card">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label styleClass="chart-title" text="Jumlah Aset per Jenis" />
            <BarChart fx:id="assetBarChart" categoryGap="20.0" legendVisible="false" animated="false" styleClass="dashboard-bar-chart">
                <xAxis>
                    <CategoryAxis fx:id="categoryAxis" />
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="numberAxis" label="Jumlah" />
                </yAxis>
            </BarChart>
        </VBox>

        <!-- Pie Chart Card -->
        <VBox fx:id="pieChartCard" styleClass="table-container,chart-card">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label styleClass="chart-title" text="Distribusi Aset per Subdirektorat" />
            <PieChart fx:id="distributionPieChart" clockwise="true" labelsVisible="true" legendVisible="false" startAngle="90.0" styleClass="dashboard-pie-chart" />
        </VBox>
    </VBox>

    <!-- Recent Activities Section -->
    <VBox fx:id="recentActivitiesCard" styleClass="table-container,activity-card" spacing="12">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <Label styleClass="table-title" text="Aktivitas Terbaru" />
        <VBox fx:id="activitiesList" styleClass="activity-list" spacing="12" />
    </VBox>
</VBox>