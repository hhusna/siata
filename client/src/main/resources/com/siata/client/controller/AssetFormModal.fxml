<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="modalContainer" prefWidth="480" maxWidth="480" maxHeight="650" styleClass="modal-content" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.siata.client.controller.AssetFormModalController">
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" styleClass="modal-header">
        <padding>
            <Insets bottom="16.0" left="24.0" right="24.0" top="24.0" />
        </padding>
        <VBox spacing="4">
            <Label fx:id="modalTitle" styleClass="modal-title" text="Tambah Aset Baru" />
            <Label fx:id="modalSubtitle" styleClass="modal-subtitle" text="Masukkan informasi aset yang akan ditambahkan" />
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="closeButton" styleClass="modal-close-button" text="âœ•" />
    </HBox>

    <!-- Form Content -->
    <ScrollPane fx:id="formScrollPane" fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" prefViewportHeight="450" maxHeight="450" styleClass="modal-scroll-pane">
        <VBox fx:id="formContent" spacing="16" styleClass="modal-form-content">
            <padding>
                <Insets bottom="0.0" left="24.0" right="24.0" top="0.0" />
            </padding>
            <!-- Kode Aset -->
            <Label styleClass="form-label" text="Kode Aset (10 digit)" />
            <TextField fx:id="kodeField" promptText="Contoh: 1234567890" />
            <Text styleClass="form-hint" text="Masukkan 10 digit angka sebagai kode unik aset" />

            <!-- Jenis Aset -->
            <Label styleClass="form-label" text="Jenis Aset" />
            <ComboBox fx:id="jenisCombo" promptText="Pilih jenis aset" />

            <!-- Merk Barang -->
            <Label styleClass="form-label" text="Merk Barang" />
            <TextField fx:id="merkField" promptText="Contoh: Dell, HP, Canon" />

            <!-- Pemegang -->
            <Label styleClass="form-label" text="Pemegang (Keterangan)" />
            <TextField fx:id="pemegangField" promptText="Nama pegawai atau ruangan" />
            <Text styleClass="form-hint" text="Kosongkan jika aset belum memiliki pemegang" />

            <!-- Subdirektorat -->
            <Label styleClass="form-label" text="Subdirektorat (Subdit)" />
            <ComboBox fx:id="subditCombo" promptText="Pilih subdirektorat" />

            <!-- Tanggal Perolehan -->
            <Label styleClass="form-label" text="Tanggal Perolehan" />
            <DatePicker fx:id="tanggalPicker" />

            <!-- Nilai Aset -->
            <Label styleClass="form-label" text="Nilai Aset (Rupiah)" />
            <TextField fx:id="rupiahField" />

            <!-- Kondisi -->
            <Label styleClass="form-label" text="Kondisi" />
            <ComboBox fx:id="kondisiCombo" promptText="Pilih kondisi aset" />

            <!-- Status -->
            <Label styleClass="form-label" text="Status" />
            <ComboBox fx:id="statusCombo" promptText="Pilih status aset" />
        </VBox>
    </ScrollPane>

    <!-- Buttons -->
    <HBox spacing="12" alignment="CENTER_RIGHT" styleClass="modal-footer">
        <padding>
            <Insets bottom="24.0" left="24.0" right="24.0" top="20.0" />
        </padding>
        <Button fx:id="cancelButton" styleClass="secondary-button" text="Batal" />
        <Button fx:id="saveButton" styleClass="primary-button" text="Simpan" />
    </HBox>
</VBox>