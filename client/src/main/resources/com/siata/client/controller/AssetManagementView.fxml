<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TableColumn?>
<VBox fx:id="mainContainer" spacing="20" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.siata.client.controller.AssetManagementController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Header Section -->
    <HBox spacing="16" alignment="CENTER_LEFT">
        <VBox spacing="4">
            <Label styleClass="page-intro-title" text="Manajemen Aset" />
            <Label styleClass="page-intro-description" text="Kelola data aset pegawai" />
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="addButton" styleClass="primary-button" text="+ Tambah Aset" />
    </HBox>

    <!-- Filter Bar -->
    <HBox fx:id="filterBar" spacing="12" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Q Cari" prefWidth="200" />
        <ComboBox fx:id="jenisFilterCombo" prefWidth="150" />
        <ComboBox fx:id="statusFilterCombo" prefWidth="150" />
    </HBox>

    <!-- Table Container -->
    <VBox fx:id="tableContainer" styleClass="table-container" spacing="16">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <TableView fx:id="assetTable" styleClass="data-table">
            <columns>
                <TableColumn fx:id="kodeCol" text="Kode Aset" />
                <TableColumn fx:id="jenisCol" text="Jenis" />
                <TableColumn fx:id="merkCol" text="Merk Barang" />
                <TableColumn fx:id="keteranganCol" text="Keterangan" />
                <TableColumn fx:id="subditCol" text="Subdit" />
                <TableColumn fx:id="tanggalCol" text="Tanggal Perolehan" />
                <TableColumn fx:id="rupiahCol" text="Rupiah Aset" />
                <TableColumn fx:id="kondisiCol" text="Kondisi" />
                <TableColumn fx:id="statusCol" text="Status" />
                <TableColumn fx:id="aksiCol" text="Aksi" prefWidth="140" />
            </columns>
        </TableView>
    </VBox>
</VBox>